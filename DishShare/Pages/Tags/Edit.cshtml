@page
@model DishShare.Pages.Tags.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tag.ID" />
            <div class="form-group">
                <label asp-for="Tag.TagName" class="control-label"></label>
                <input asp-for="Tag.TagName" class="form-control" />
                <span asp-validation-for="Tag.TagName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tag.IsPublic" /> @Html.DisplayNameFor(model => model.Tag.IsPublic)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Tag.UserID" class="control-label"></label>
                <select asp-for="Tag.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Tag.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tag.RecipeID" class="control-label"></label>
                <select asp-for="Tag.RecipeID" class="form-control" asp-items="ViewBag.RecipeID"></select>
                <span asp-validation-for="Tag.RecipeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
