@page
@model DishShare.Pages.Ratings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rating.ID" />
            <div class="form-group">
                <label asp-for="Rating.RatingValue" class="control-label"></label>
                <select asp-for="Rating.RatingValue" class="form-control"></select>
                <span asp-validation-for="Rating.RatingValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.RatingDate" class="control-label"></label>
                <input asp-for="Rating.RatingDate" class="form-control" />
                <span asp-validation-for="Rating.RatingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.UserID" class="control-label"></label>
                <select asp-for="Rating.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Rating.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.RecipeID" class="control-label"></label>
                <select asp-for="Rating.RecipeID" class="form-control" asp-items="ViewBag.RecipeID"></select>
                <span asp-validation-for="Rating.RecipeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
